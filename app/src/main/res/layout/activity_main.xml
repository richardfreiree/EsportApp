<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/imgTrofeu"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/trofeu" />


    <ImageView
        android:id="@+id/imgVoley"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/imgTrofeu"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/voleyball"
        android:layout_marginRight="40dp"/>

    <ImageView
        android:id="@+id/imgBoxe"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/imgTrofeu"
        android:layout_InParent="true"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/boxe" />

    <ImageView
        android:id="@+id/imgEsgrima"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@id/imgTrofeu"
        android:layout_alignLeft="@id/imgBoxe"
        android:scaleType="centerCrop"
        android:src="@drawable/esgrima" />

    <ImageView
        android:id="@+id/imgTenis"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="40dp"
        android:layout_above="@id/imgTrofeu"
        android:layout_toRightOf="@id/imgTrofeu"
        android:scaleType="centerCrop"
        android:src="@drawable/tenisdemesa" />


</RelativeLayout>